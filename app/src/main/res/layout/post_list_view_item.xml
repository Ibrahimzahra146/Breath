<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_layout_borders"
    android:layout_marginBottom="13dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">


        <ImageView
            android:id="@+id/postStatus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/unlocked_icon"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/postStatus"
            android:text="10:10pm"
            android:textSize="12dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/postTime"
            android:background="#ccc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="17dp"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#3a6368" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:layout_marginTop="6dp"
                    android:text="First LastName"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="19.5dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/save_icon" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/postInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInfoLayout"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/youtubeLinkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp">


                <TextView
                    android:id="@+id/postText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="sans-serif-black"
                    android:text="My fist post is the best post ever ,I cant find better than what I have said"
                    android:textSize="13dp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:contentDescription="Specs"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="centerCrop"
                android:scrollbars="vertical" />


        </LinearLayout>


        <!--android:layout_marginLeft="13dp"-->
        <!--android:layout_marginRight="13dp"-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postInfoLayout"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/love_post"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:clickable="true"
                        android:padding="4dp"
                        android:src="@drawable/love_icon" />

                    <TextView
                        android:id="@+id/loveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="1 love"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/like_post"
                        android:layout_width="30dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:padding="4dp"
                        android:src="@drawable/like_icon"

                        />

                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="3 likes"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dislike_post"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="-2dp"
                        android:padding="4dp"
                        android:src="@drawable/filled_thumb_up" />

                    <TextView
                        android:id="@+id/unlikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-2dp"
                        android:gravity="center"
                        android:text="4 unlikes"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/comment_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="8 comments"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>