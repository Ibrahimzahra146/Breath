<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp"
    android:background="@drawable/white_layout_corners"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">


        <ImageView
            android:id="@+id/postStatus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/unlocked_icon"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postStatus"
            android:layout_centerHorizontal="true"
            android:text="10:10pm"
            android:textSize="12dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/postTime"
            android:layout_marginTop="1dp"
            android:background="#ccc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="17dp"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="#3a6368" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="First LastName"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/save_icon"
                    android:layout_width="30dp"
                    android:layout_height="19.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/save_icon" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/postInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInfoLayout"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp">


                <TextView
                    android:id="@+id/postText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="sans-serif-black"
                    android:text="My fist post is the best post ever ,I cant find better than what I have said"
                    android:textSize="13.5dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/youtubeLinkLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:background="@drawable/post_view_youtube_borders"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/youtubeLinkImage"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="#000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/youtubeLinkTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/youtubeLinkAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/youtubeLinkTitle"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="12.5dp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="20dp"
                        android:text="Youtube.com"
                        android:textSize="12dp"

                        />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:contentDescription="Specs"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="centerCrop"
                android:scrollbars="vertical" />


        </LinearLayout>


        <!--android:layout_marginLeft="13dp"-->
        <!--android:layout_marginRight="13dp"-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postInfoLayout"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingRight="7dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4.5dp"
                    android:id="@+id/loveLayout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/love_post"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:clickable="true"
                        android:padding="4.3dp"
                        android:src="@drawable/love_icon" />

                    <TextView
                        android:id="@+id/loveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="35dp"
                    android:id="@+id/likeLayout"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="-6dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/like_post"
                        android:layout_width="30dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:padding="4dp"
                        android:src="@drawable/like_icon"

                        />

                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.3dp"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/unlikeLayout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dislike_post"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:padding="4dp"
                        android:src="@drawable/unlike_icon" />

                    <TextView
                        android:id="@+id/unlikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-1.5dp"
                        android:text="1"
                        android:textSize="12dp" />

                </LinearLayout>






            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/comment_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="8 comments"
                    android:textSize="12dp"
                    android:id="@+id/commentText"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/add_comment"
                    android:layout_width="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:src="@drawable/add_comment_icon_png" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>